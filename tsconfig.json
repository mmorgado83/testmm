{
    "compilerOptions": {
      "skipLibCheck": true,
      "target": "ESNext",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "build",
      "types": ["@types/node", "reflect-metadata"]
    },
    "include": ["cucumber.js", "src/**/*.ts"],
    "exclude": ["node_modules", "build"]
  }